<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane styleClass="lobby-pane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.client.controller.LobbyController"
            prefHeight="600.0" prefWidth="800.0">
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="header">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="游戏大厅" styleClass="header-label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="用户: 测试用户"/>
        </HBox>
    </top>

    <left>
        <VBox styleClass="sidebar" spacing="10" prefWidth="200">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="在线用户" styleClass="section-label"/>
            <ListView fx:id="userListView" VBox.vgrow="ALWAYS"/>

            <JFXButton fx:id="refreshButton" text="刷新" styleClass="button-flat" maxWidth="Infinity"/>
            <JFXButton fx:id="logoutButton" text="退出" styleClass="button-flat" maxWidth="Infinity"/>
        </VBox>
    </left>

    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab fx:id="chatTab" text="大厅聊天">
                <BorderPane>
                    <center>
                        <TextArea editable="false" wrapText="true" prefRowCount="20"/>
                    </center>
                    <bottom>
                        <HBox spacing="10">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                            <TextField HBox.hgrow="ALWAYS" promptText="输入消息..."/>
                            <JFXButton text="发送" styleClass="button-raised"/>
                        </HBox>
                    </bottom>
                </BorderPane>
            </Tab>

            <Tab fx:id="roomsTab" text="游戏房间">
                <VBox spacing="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <JFXButton text="刷新列表" styleClass="button-flat"/>
                        <JFXButton text="创建房间" styleClass="button-raised"/>
                    </HBox>
                    <TableView VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn text="房间名称" prefWidth="150"/>
                            <TableColumn text="游戏名" prefWidth="100"/>
                            <TableColumn text="人数" prefWidth="80"/>
                            <TableColumn text="状态" prefWidth="80"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab fx:id="profileTab" text="个人信息">
                <VBox spacing="20" alignment="CENTER">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <Label text="个人信息" styleClass="title-label"/>

                    <GridPane hgap="10" vgap="10" alignment="CENTER">
                        <columnConstraints>
                            <ColumnConstraints minWidth="100" prefWidth="150"/>
                            <ColumnConstraints minWidth="200" prefWidth="300"/>
                        </columnConstraints>

                        <Label text="用户ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label text="1001" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="用户名:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label text="测试用户" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="客户端地址:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label text="192.168.1.100" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="虚拟IP:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <Label text="10.0.0.5" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </GridPane>

                    <JFXButton text="刷新个人信息" styleClass="button-raised"/>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" styleClass="footer">
            <padding>
                <Insets top="5" right="20" bottom="5" left="20"/>
            </padding>
            <Label text="已连接到服务器"/>
            <Separator orientation="VERTICAL"/>
            <Label text="在线用户: 4"/>
            <Separator orientation="VERTICAL"/>
            <Label text="可用房间: 0"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="v1.0.0"/>
        </HBox>
    </bottom>
</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.client.controller.NetworkTestController"
      prefWidth="600" prefHeight="400" spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="网络连接测试工具" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="runHttpTestButton" text="HTTP连接测试" onAction="#handleRunHttpTest"/>
        <Button fx:id="runWsTestButton" text="WebSocket连接测试" onAction="#handleRunWsTest"/>
        <Button fx:id="runFullTestButton" text="完整网络测试" onAction="#handleRunFullTest"/>
    </HBox>

    <Label text="测试结果:"/>

    <ScrollPane fx:id="scrollPane" VBox.vgrow="ALWAYS">
        <TextArea fx:id="resultsTextArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
    </ScrollPane>
</VBox>